{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/tests/unit-tests/angular-generation.test",
                "${workspaceFolder}/packages/tests/unit-tests/angular-generator.test",
                "${workspaceFolder}/packages/tests/unit-tests/react-generator.test",
                "${workspaceFolder}/packages/tests/unit-tests/vue-generation.test"
              ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}