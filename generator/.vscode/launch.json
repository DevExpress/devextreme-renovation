    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                //"${workspaceFolder}/build/test/angular-generation.test",
                //"${workspaceFolder}/build/test/angular-generator.test"
                "${workspaceFolder}/build/test/react-generator.test"
                //"${workspaceFolder}/build/test"
            ],
            // "preLaunchTask": "tsc: build - tsconfig.json",
            // "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}